<odoo>
    <record model="ir.ui.view" id="sale_order_view_form">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
             <xpath expr='//div[@name="button_box"]' position='inside'>
                <button name="show_gift_card_line" type="object" class="oe_stat_button" icon="fa-gift" attrs="{'invisible': [('gift_card_line_count', '=', 0)]}">
                    <field name="gift_card_line_count" widget="statinfo" string="Gift Card uses" />
                </button>
            </xpath>
        </field>
    </record>


</odoo>
