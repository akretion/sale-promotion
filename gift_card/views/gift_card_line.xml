<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="gift_card_line_tree_view">
        <field name="name">Gift Cards Line tree</field>
        <field name="model">gift.card.line</field>
        <field name="arch" type="xml">
            <tree string="Gift Cards">
                 <field name="gift_card_id" />
                 <field name="amount_used" />
                 <field name="sale_order_ids" widget="many2many_tags" optional="show"/>
                 <field name="account_move_ids" widget="many2many_tags" optional="show"/>
                 <field name="payment_id" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="gift_card_line_view_form">
        <field name="name">gift.card.line.form</field>
        <field name="model">gift.card.line</field>
        <field name="arch" type="xml">
            <form string="Gift Card Use">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="gift_card_id"/>
                        <field name="beneficiary_id"/>
                        <field name="amount_used"/>
                        <field name="gift_card_id"/>
                        <field name="validation_mode"/>
                    </group>
                    <group>
                        <field name="payment_id"/>
                        <field name="sale_order_ids"/>
                        <field name="account_move_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
